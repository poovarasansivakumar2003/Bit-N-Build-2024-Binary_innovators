                    <script>
                        let cart = {};
            
                        function increment(id) {
                            let count = document.getElementById("count-" + id);
                            let tooltipCount = document.getElementById("tooltip-count-" + id);
                            let currentValue = parseInt(count.textContent);
                            count.textContent = currentValue + 1;
                            cart[id] = (cart[id] || 0) + 1;
                            tooltipCount.textContent = cart[id]; // Update tooltip count
                        }
            
                        function decrement(id) {
                            let count = document.getElementById("count-" + id);
                            let tooltipCount = document.getElementById("tooltip-count-" + id);
                            let currentValue = parseInt(count.textContent);
                            if (currentValue > 0) {
                                count.textContent = currentValue - 1;
                                cart[id] = Math.max((cart[id] || 0) - 1, 0); // Prevent negative cart values
                                tooltipCount.textContent = cart[id]; // Update tooltip count only if greater than 0
                            }
                        }
            
                        function addToCart(event, id) {
                            event.preventDefault(); // Prevent the page from refreshing
                            alert(`Added ${cart[id] || 0} items from project ${id} to the cart`);
                            cart[id] = 0; // Reset count in the cart
                            document.getElementById("count-" + id).textContent = 0; // Reset the count display
                            document.getElementById("tooltip-count-" + id).textContent = 0; // Reset the tooltip count as well
                        }
            
                        function showAll() {
                            const cards = document.querySelectorAll('.product-card');
                            cards.forEach(card => {
                                card.style.display = 'block'; // Show all cards
                            });
                        }
            
                        function showCategory(category) {
                            const cards = document.querySelectorAll('.product-card');
                            cards.forEach(card => {
                                if (card.classList.contains(category)) {
                                    card.style.display = 'block'; // Show category cards
                                } else {
                                    card.style.display = 'none'; // Hide other cards
                                }
                            });
                        }
            
